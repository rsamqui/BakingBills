<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="navigation.addUserFragment"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:backgroundTint="#FFF3DC"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="center"
            android:text="@string/agregar_nuevo_usuario"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            android:typeface="monospace" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/logo"
            tools:ignore="ContentDescription" />

        <EditText
            android:id="@+id/etNombres"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:autofillHints=""
            android:background="@drawable/custom_input"
            android:drawableStart="@drawable/name"
            android:drawablePadding="12dp"
            android:hint="@string/nombre"
            android:inputType="text"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:textColor="@color/black"
            android:textColorHint="#68604A" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <EditText
            android:id="@+id/etApellidos"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:autofillHints=""
            android:background="@drawable/custom_input"
            android:drawableStart="@drawable/surname"
            android:drawablePadding="12dp"
            android:hint="@string/apellidos"
            android:inputType="text"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:textColor="@color/black"
            android:textColorHint="#68604A" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <EditText
            android:id="@+id/etUsuario"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:autofillHints=""
            android:background="@drawable/custom_input"
            android:drawableStart="@drawable/username"
            android:drawablePadding="12dp"
            android:hint="@string/usuario"
            android:inputType="text"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:textColor="@color/black"
            android:textColorHint="#68604A" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:autofillHints=""
            android:background="@drawable/custom_input"
            android:drawableStart="@drawable/email"
            android:drawablePadding="12dp"
            android:hint="@string/correo"
            android:inputType="text"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:textColor="@color/black"
            android:textColorHint="#68604A"
            tools:ignore="TextFields" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <EditText
            android:id="@+id/etContraseÃ±a"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:autofillHints=""
            android:background="@drawable/custom_input"
            android:drawableStart="@drawable/pass"
            android:drawablePadding="12dp"
            android:hint="@string/contrase_a"
            android:inputType="text"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:textColor="@color/black"
            android:textColorHint="#68604A"
            tools:ignore="TextFields" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnVolver"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:layout_gravity="end"
                android:backgroundTint="#4C4533"
                android:text="@string/volver"
                android:textColor="#CDC7B4" />

            <Space
                android:layout_width="135dp"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/btnAgregar"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:layout_gravity="start"
                android:backgroundTint="#4C4533"
                android:text="@string/agregar"
                android:textColor="#CDC7B4" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>